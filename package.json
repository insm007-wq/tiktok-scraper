{
  "name": "tiktok-scraper",
  "version": "1.0.0",
  "description": "Express server for long-running Apify scraping tasks",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "setup:r2": "tsx src/storage/setup-r2-cors.ts",
    "migrate:thumbnails": "tsx src/storage/migrate-thumbnails-to-r2.ts",
    "verify:r2": "tsx src/storage/verify-r2-setup.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.972.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "mongodb": "^7.0.0",
    "node-cron": "^4.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
