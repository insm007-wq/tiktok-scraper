# Server Configuration
PORT=3001
NODE_ENV=production

# API Security (must match Next.js app)
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
RAILWAY_API_SECRET=your-secret-key-min-32-chars-here

# Apify API Key (same as Next.js app)
APIFY_API_KEY=your-apify-api-key-here

# Optional: CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=https://your-nextjs-app.vercel.app,http://localhost:3000

# Optional: Request timeout in milliseconds (default: 600000 = 10 minutes)
REQUEST_TIMEOUT_MS=600000
